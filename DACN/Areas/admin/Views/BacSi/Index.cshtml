@model IEnumerable<DACN.Models.BacSi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/admin_Layout.cshtml";
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Tables - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
}

<div id="layoutSidenav_content" , style="padding-left: 20px; top: 10px">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh sách bác sĩ của các chuyên khoa</h1>
            <div class="card mb-4">
                <a href="@Url.Action("Create","BacSi")">Thêm bác sĩ</a>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Bảng dang sách
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Chuyên khoa</th>
                                <th>Tên bác sĩ</th>
                                <th>Tuổi</th>
                                <th>Hình ảnh</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Trình độ</th>
                                <th>Kinh nghiệm</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>Chuyên khoa</th>
                                <th>Tên bác sĩ</th>
                                <th>Tuổi</th>
                                <th>Hình ảnh</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Trình độ</th>
                                <th>Kinh nghiệm</th>
                                <th></th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ChuyenKhoa.TenChuyenKhoa)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TenBacSi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tuoi)</td>
                                    <td><img src="@Url.Content("~/HinhAnh/" + item.Anh)" width="120px"</td>
                                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TrinhDo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.KinhNghiem)</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaBacSi }) |
                                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaBacSi }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaBacSi })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="~/Areas/admin/Content/js/datatables-simple-demo.js"></script>
