@model DACN.Models.BacSi

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/admin_Layout.cshtml";
}

<h1>Bạn có chắc chắn xóa bác sĩ này không?</h1>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.HiddenFor(model => model.ChuyenKhoa.TenChuyenKhoa) Chuyên khoa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChuyenKhoa.TenChuyenKhoa)
        </dd>

        <dt>
            @Html.HiddenFor(model => model.TenBacSi) Tên bác sĩ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenBacSi)
        </dd>

        <dt>
            @Html.HiddenFor(model => model.Tuoi) Tuổi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tuoi)
        </dd>

        <dt>
            @Html.HiddenFor(model => model.Anh) Hình ảnh
        </dt>

        <dd>
            <div>
                <img src="@Url.Content("~/HinhAnh/"+ @Model.Anh)" width=120 px />
            </div>
        </dd>

        <dt>
            @Html.HiddenFor(model => model.SDT) Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            @Html.HiddenFor(model => model.Email) Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.HiddenFor(model => model.TrinhDo) Trình độ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrinhDo)
        </dd>

        <dt>
            @Html.HiddenFor(model => model.KinhNghiem) Kinh nghiệm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KinhNghiem)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Trở về danh sách", "Index")
        </div>
    }
</div>
