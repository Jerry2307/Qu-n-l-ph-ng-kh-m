@model DACN.Models.BacSi

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/admin_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "BacSi", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 style="text-align: center">Chỉnh sửa thông tin</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaBacSi)

        <div class="form-group">
            <h5>Chuyên khoa</h5>
            <div class="col-md-10">
                @Html.DropDownList("MaChuyenKhoa", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaChuyenKhoa, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Tên bác sĩ</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenBacSi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenBacSi, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Tuổi</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tuoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tuoi, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Ảnh</h5>
            <div class="col-md-10">
                <img src="@Url.Content("~/HinhAnh/"+ Html.DisplayFor(model => model.Anh))" width="120px" /> (ảnh hiện tại)
                <div>
                    <br />
                    Thay đổi ảnh mới
                    <input type="file" name="fileUpload" />
                </div>
                @ViewBag.ThongBao
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Số điện thoại</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Email</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Trình độ</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrinhDo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrinhDo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h5>Kinh nghiệm</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KinhNghiem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KinhNghiem, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
