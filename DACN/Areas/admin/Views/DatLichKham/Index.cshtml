@model IEnumerable<DACN.Models.DatLichKham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/admin_Layout.cshtml";
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Tables - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
}

<div id="layoutSidenav_content" , style="padding-left: 20px; top: 10px">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh sách đặt lịch khám</h1>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Bảng dang sách
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Tên dịch vụ</th>
                                <th>Tên bệnh nhân</th>
                                <th>Chuyên khoa</th>
                                <th>Bác sĩ</th>
                                <th>Ngày đặt lịch</th>
                                <th>Triệu chứng</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>Tên dịch vụ</th>
                                <th>Tên bệnh nhân</th>
                                <th>Chuyên khoa</th>
                                <th>Bác sĩ</th>
                                <th>Ngày đặt lịch</th>
                                <th>Triệu chứng</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.DichVu.TenDichVu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BenhNhan.HoTen)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BacSi.ChuyenKhoa.TenChuyenKhoa)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BacSi.TenBacSi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayDatLich)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TrieuChung)</td>
                                    <td>@if (item.TrangThai == true){<button type="button" class="btn btn-outline-success" disabled="disabled">Đã khám</button>}else{@Html.ActionLink("Chưa khám", "UpdateLichKham", new { id = item.MaDatLich }, new { @class = "btn btn-outline-danger" })}
                                </td>
                                    <td>
                                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaDatLich })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="~/Areas/admin/Content/js/datatables-simple-demo.js"></script>
