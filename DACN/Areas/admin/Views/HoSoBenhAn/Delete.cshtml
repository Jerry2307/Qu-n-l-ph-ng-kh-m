@model DACN.Models.HoSoBenhAn

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/admin_Layout.cshtml";
}

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.HiddenFor(model => model.BenhNhan.HoTen) Họ tên bệnh nhân
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BenhNhan.HoTen)
        </dd>

        <dt>
